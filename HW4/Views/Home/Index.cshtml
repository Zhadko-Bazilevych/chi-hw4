@model HW4.Models.User

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-column align-items-center">
    <h1 class="display-4">Ласкаво просимо</h1>
    <p>стань розробником зараз</p>
    <div class="w-50">
        @using (Html.BeginForm("Congrats", "Home"))
        {
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between">
                    <div class="control-label ms-2">Ваше ім'я:</div>
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger me-2" })
                </div>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group mb-3">
                <div class="d-flex justify-content-between">
                    <div class="control-label ms-2">Ваша пошта:</div>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger me-2" })
                </div>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group d-flex justify-content-center">
                <div class="">
                    <input type="submit" class="btn btn-dark" value="Стати розробником" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}